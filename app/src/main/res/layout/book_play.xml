<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/bookPlayRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/primary">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="0dp"
      android:layout_height="?attr/actionBarSize"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:menu="@menu/book_play"
      app:navigationIcon="@drawable/ic_arrow_back" />

    <ImageView
      android:id="@+id/play"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="36dp"
      android:background="@android:color/transparent"
      android:contentDescription="@string/play_pause"
      android:elevation="0dp"
      android:foreground="?attr/selectableItemBackground"
      android:padding="16dp"
      android:transitionName="@string/fab_transition"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
<!-- Кнопка плей/пауза с фоном
    <ImageView
      android:id="@+id/play"
      android:layout_width="83dp"
      android:layout_height="83dp"
      android:layout_marginBottom="36dp"
      android:background="@drawable/play_button"
      android:contentDescription="@string/play_pause"
      android:elevation="8dp"
      android:foreground="?attr/selectableItemBackground"
      android:padding="16dp"
      android:theme="@style/PlayButtonStyle"
      android:tint="@color/white"
      android:transitionName="@string/fab_transition"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
-->
    <ImageView
      android:id="@+id/rewind"
      style="@style/FastForwardRewindStyle"
      android:layout_marginEnd="40dp"
      android:contentDescription="@string/rewind"
      android:src="@drawable/ic_fast_rewind"
      app:layout_constraintBottom_toBottomOf="@id/play"
      app:layout_constraintRight_toLeftOf="@id/play"
      app:layout_constraintTop_toTopOf="@id/play" />

    <ImageView
      android:id="@+id/fastForward"
      style="@style/FastForwardRewindStyle"
      android:layout_marginStart="40dp"
      android:contentDescription="@string/fast_forward"
      android:src="@drawable/ic_fast_forward"
      app:layout_constraintBottom_toBottomOf="@id/play"
      app:layout_constraintLeft_toRightOf="@id/play"
      app:layout_constraintTop_toTopOf="@id/play" />

    <TextView
      android:id="@+id/playedTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:text="@string/zeroTime"
      android:textAppearance="?textAppearanceBody2"
      app:layout_constraintLeft_toLeftOf="@id/cover"
      app:layout_constraintBottom_toTopOf="@+id/play" />

    <TextView
      android:id="@+id/maxTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:text="@string/zeroTime"
      android:textAppearance="?textAppearanceBody2"
      app:layout_constraintRight_toRightOf="@id/cover"
      app:layout_constraintBottom_toTopOf="@+id/play" />

    <com.google.android.material.slider.Slider
      android:id="@+id/slider"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="1dp"
      android:layout_marginRight="1dp"
      android:layout_marginBottom="7dp"
      app:thumbRadius="8dp"
      app:trackHeight="3dp"
      app:trackColorActive="?attr/colorPrimary"
      app:trackColorInactive="?attr/colorControlHighlight"
      app:layout_constraintBottom_toTopOf="@id/play"
      app:layout_constraintLeft_toLeftOf="@id/cover"
      app:layout_constraintRight_toRightOf="@id/cover" />

    <ImageView
      android:id="@+id/previous"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/previous_track"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      android:padding="8dp"
      android:src="@drawable/ic_skip_previous"
	  android:layout_marginStart="10dp"
      app:layout_constraintBottom_toBottomOf="@+id/currentChapterContainer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/currentChapterContainer" />

    <ImageView
      android:id="@+id/next"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/next_track"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      android:padding="8dp"
      android:src="@drawable/ic_skip_next"
	  android:layout_marginEnd="10dp"
      app:layout_constraintBottom_toBottomOf="@+id/currentChapterContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/currentChapterContainer" />

    <FrameLayout
      android:id="@+id/currentBookContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:foreground="?attr/selectableItemBackground"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="8dp"
      android:gravity="center"
      app:layout_constraintBottom_toTopOf="@+id/currentChapterContainer"
      app:layout_constraintEnd_toStartOf="@+id/next"
      app:layout_constraintStart_toEndOf="@+id/previous"
      tools:text="This is the end">

        <TextView
          android:id="@+id/currentBookText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawablePadding="4dp"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="1"
          android:minHeight="56dp"
          android:paddingTop="5dp"
          android:paddingBottom="0dp"
          style="@android:style/TextAppearance.Medium"
          app:layout_constrainedWidth="true"
          app:layout_constraintBottom_toTopOf="@+id/currentChapterContainer"
          app:layout_constraintEnd_toStartOf="@+id/next"
          app:layout_constraintStart_toEndOf="@+id/previous"
          tools:text="This is the end" />

    </FrameLayout>

    <FrameLayout
      android:id="@+id/currentChapterContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:foreground="?attr/selectableItemBackground"
      android:layout_marginStart="8dp"
      android:layout_marginTop="0dp"
      android:layout_marginEnd="8dp"
      android:gravity="center"
      app:layout_constraintBottom_toTopOf="@+id/slider"
      app:layout_constraintEnd_toStartOf="@+id/next"
      app:layout_constraintStart_toEndOf="@+id/previous"
      tools:text="This is the end">

        <TextView
          android:id="@+id/currentChapterText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawableEnd="@drawable/ic_chevron_down"
          android:drawablePadding="4dp"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="2"
          android:minHeight="66dp"
          android:paddingTop="0dp"
          android:paddingBottom="8dp"
          style="@android:style/TextAppearance.Medium"
          app:layout_constrainedWidth="true"
          app:layout_constraintBottom_toTopOf="@+id/slider"
          app:layout_constraintEnd_toStartOf="@+id/next"
          app:layout_constraintStart_toEndOf="@+id/previous"
          tools:text="This is the end" />

    </FrameLayout>

    <ImageView
      android:id="@+id/cover"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/cover"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="10dp"
      app:layout_constraintBottom_toTopOf="@+id/currentBookContainer"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:layout_goneMarginBottom="16dp"
      tools:ignore="UnusedAttribute"
      tools:src="@android:color/darker_gray"	  />
    <!--android:scaleType="centerCrop"-->

    <View
      android:id="@+id/gradientShadow"
      android:layout_width="0dp"
      android:layout_height="4dp"
      android:background="@drawable/shadow_top"
      app:layout_constraintBottom_toBottomOf="@+id/cover"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:ignore="InconsistentLayout" />

    <TextView
      android:id="@+id/timerCountdownView"
      style="@style/timer_text_view_style"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      tools:text="00:34" />

</androidx.constraintlayout.widget.ConstraintLayout>
