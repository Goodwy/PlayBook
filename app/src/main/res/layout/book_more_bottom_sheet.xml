<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="8dp"
  android:background="@drawable/bottom_sheet">

    <TextView
      android:id="@+id/title"
      style="@style/BottomSheetRow"
      android:text="@string/change_book_name"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/format_text" />

    <TextView
      android:id="@+id/author"
      style="@style/BottomSheetRow"
      android:text="@string/change_book_author"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/format_author" />

    <TextView
      android:id="@+id/internetCover"
      style="@style/BottomSheetRow"
      android:text="@string/download_book_cover"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/ic_download" />

    <TextView
      android:id="@+id/fileCover"
      style="@style/BottomSheetRow"
      android:text="@string/pick_book_cover"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/ic_image" />

    <TextView
      android:id="@+id/bookmark"
      style="@style/BottomSheetRow"
      android:text="@string/bookmark"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/bookmark" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:background="@drawable/divider_settings" />

    <TextView
      android:id="@+id/deleteFile"
      style="@style/BottomSheetRow"
      android:text="@string/delete_file"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      android:textColor="@color/red"
      app:drawableStartCompat="@drawable/delete" />

    <View
      android:id="@+id/deleteFileDivider"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:background="@drawable/divider_settings" />

    <TextView
      android:id="@+id/markAsCurrent"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_current"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/ic_headphones" />

    <TextView
      android:id="@+id/markAsCompleted"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_completed"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/ic_check_circle" />

    <TextView
      android:id="@+id/markAsNotStarted"
      style="@style/BottomSheetRow"
      android:text="@string/mark_as_not_started"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:drawableStartCompat="@drawable/ic_uncheck_circle" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:background="@drawable/divider_settings" />

    <TextView
      android:id="@+id/cancel"
      style="@style/BottomSheetRow"
      android:gravity="center_vertical|end"
      android:text="@string/dialog_cancel"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      android:textColor="?colorPrimary" />

</LinearLayout>
