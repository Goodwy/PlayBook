<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
	android:background="?backgroundColor">

    <TextView
        android:id="@+id/title"
        style="@style/BottomSheetRow"
        android:drawableStart="@drawable/format_text"
        android:text="@string/change_book_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
      android:id="@+id/author"
      style="@style/BottomSheetRow"
      android:drawableStart="@drawable/format_author"
      android:text="@string/change_book_author"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
      android:id="@+id/deleteFile"
      style="@style/BottomSheetRow"
      android:drawableStart="@drawable/delete"
      android:text="@string/delete_file"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      android:visibility="visible"/>

    <TextView
        android:id="@+id/internetCover"
        style="@style/BottomSheetRow"
        android:drawableStart="@drawable/ic_download"
        android:text="@string/download_book_cover"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/fileCover"
        style="@style/BottomSheetRow"
        android:drawableStart="@drawable/ic_image"
        android:text="@string/pick_book_cover"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <TextView
        android:id="@+id/bookmark"
        style="@style/BottomSheetRow"
        android:drawableStart="@drawable/bookmark"
        android:text="@string/bookmark"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

</LinearLayout>
