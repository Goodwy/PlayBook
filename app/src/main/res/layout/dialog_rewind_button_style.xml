<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

    <com.goodwy.audiobook.features.prefAppearanceUIPlayer.RewindStyleClassicView
      android:id="@+id/classicButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      app:ssv_title="@string/pref_rewind_buttons_style_classic" />

        <com.goodwy.audiobook.features.prefAppearanceUIPlayer.RewindStyleRoundedView
          android:id="@+id/roundedButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          app:ssv_title="@string/pref_rewind_buttons_style_rounded" />
</LinearLayout>
