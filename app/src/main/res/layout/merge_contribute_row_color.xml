<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:layout_height="wrap_content"
  tools:layout_width="match_parent"
  tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
      android:id="@+id/contributeColorIcon"
      style="@style/Widget.App.Switch"
      android:contentDescription="@string/pref_pay_title"
      android:src="@drawable/image_color"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:clickable="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:useMaterialThemeColors="false" />

    <TextView
      android:id="@+id/contributeColorTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="16dp"
      android:textAppearance="?textAppearanceBody1"
      app:layout_constraintBottom_toTopOf="@+id/contributeColorDescription"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@id/contributeColorIcon"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="@string/palettes" />

    <TextView
      android:id="@+id/contributeColorDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="16dp"
      android:textAppearance="?textAppearanceBody2"
      android:textColor="?android:attr/textColorSecondary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@id/contributeColorIcon"
      app:layout_constraintTop_toBottomOf="@id/contributeColorTitle"
      tools:text="@string/pref_pay_summary" />

</merge>
