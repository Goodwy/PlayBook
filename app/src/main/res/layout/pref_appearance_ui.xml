<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?backgroundColor">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?backgroundColor"
      app:navigationIcon="@drawable/ic_arrow_back"
      app:title="@string/pref_beta_title" />

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="?attr/actionBarSize"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:orientation="vertical">

            <com.goodwy.audiobook.features.settings.TripleSettingView
              android:id="@+id/miniPlayerStyle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:tsv_title="@string/pref_show_mini_player_title"
              app:tsv_description="@string/pref_show_mini_player_summary" />

            <com.goodwy.audiobook.features.settings.TripleSettingView
              android:id="@+id/rewindButtonStyle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:tsv_title="@string/pref_rewind_buttons_style_title"
              app:tsv_description="@string/pref_rewind_buttons_style_summary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
